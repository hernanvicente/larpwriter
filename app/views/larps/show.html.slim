= content_for :html_title, @larp.name

= content_for :asset_actions
  li.asset-action= link_to "edit", edit_larp_path(@larp), class: "btn btn-info btn-xs"

- unless @relationships_without_reverse_count.zero?
  p.text-warning
    span.glyphicon.glyphicon-warning-sign
    |&nbsp;There are&nbsp;
    = link_to "#{@relationships_without_reverse_count} missing relationships", missing_larp_relationships_path(@larp)
    |.

- if @larp.tags.any?
  h2 Tags
  p= display_tags @larp.tags, with_count: true
